<style>
    .alert {
        margin-top: 30px;
    }

    body {
        background-color: rgb(61, 124, 179);
    }

    .form-col {
        background-color: rgb(221, 224, 227);
        margin-top: 40px;
        padding: 10px;
        border-radius: 5px;
        box-shadow: 8px 12px 8px rgb(28, 58, 84);

    }

    h2 {
        font-family: 'Titillium Web', sans-serif;
    }

    a {
        position: absolute;
        top: 0;
        right: 0;
        margin-right: 10px;
        margin-top: 10px;
    }

    label {
        font-family: 'Titillium Web', sans-serif;
    }

    .alert-success {
        background-color: rgb(0, 228, 0);
        border: 1px solid rgb(0, 75, 0);
        color: black;
    }
</style>
<div class="container">
    <div class="row">
        <div class="col-md-3">

        </div>
        <div class="col-md-6 form-col">
            <form>
                <div class="form-group">
                    <h2>{{products.name}}</h2>
                    <a href="/">Home</a>
                </div>
                <hr>
                <div class="form-group">
                    <label for="quantity">Select Quantity</label>
                    <input type="number" class="form-control" id="quantity">
                </div>
                <div class="form-group">
                    <label for="name">Name</label>
                    <input type="text" class="form-control" id="name">
                </div>
                <div class="form-group">
                    <label for="email">Email</label>
                    <input type="email" class="form-control" id="email">
                </div>
                <div class="form-group">
                    <label for="location">Location</label>
                    <input type="text" class="form-control" id="location">
                </div>
                <button id="submit" type="submit" class="btn btn-primary">Submit</button>
            </form>
        </div>
        <div class="col-md-3"></div>
    </div>

    <div class="row">
        <div class="col-md-3"></div>
        <div class="col-md-6 alert alert-success">
            <p>Order processed! Your package will arrive in X minutes.</p>
        </div>
        <div class="col-md-3"></div>
    </div>
</div>
<script>
    $(".alert").hide();
    $("#submit").on("click", function (e) {
        e.preventDefault();
        var city = $("#location")
            .val()
            .trim();
            console.log(city);
        $.ajax({
            url: "api/location-search/" + city,
            type: "GET"
        }).then(function (data) {
            console.log(data);
        });
        $(".alert").show();
    });
</script>